<% if @vote.valid? %>
  $("#post_<%= @post.slug %>_votes").html("<%= vote_count(@post) %>")
  <% if @vote.vote == true %>
    $("#post_<%= @post.slug %>_upvote").addClass("up-vote");
    $("#post_<%= @post.slug %>_upvote").removeClass("no-vote");
  <% elsif @vote.vote == false %>
    $("#post_<%= @post.slug %>_downvote").addClass("down-vote");
    $("#post_<%= @post.slug %>_downvote").removeClass("no-vote");
  <% end %>
<% else %>
  alert('You can only vote on this once');
<% end %>