<% posts.each do |post| %>
  <div class="well">
    <%= render 'category_badges', post: post %>
    <h4><%= link_to post.title, post_path(post) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by </span>
      <%= link_to post.creator.username %>
      <small><%= post.created_at %></small>
    </p>
    <small><span><%= link_to "#{post.comments.size} comments", post_path(post) %></span></small>
  </div>
<% end %>