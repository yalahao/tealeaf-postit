<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'New Post', new_post_path, class: "btn btn-success btn-small" %>
  </li>
</ul>

<!-- Categories button -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Categories <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% Category.all.each do |cat| %>
    <li><%= link_to cat.name, category_path(cat) %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to 'New category', new_category_path %></li>
  </ul>
</div>

<% if logged_in? %>
<div class="btn-group pull-right">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      Hello, <%= current_user.username %> 
      <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'Profile', user_path(current_user) %></li>
    <li><%= link_to 'Log out', logout_path %></li>
  </ul>
</div>
<% else %>
<ul class ='nav pull-right'>
  <li>
    <%= link_to 'Register', register_path, class: 'btn btn-small btn-success' %>
  </li>
  <li>
    <%= link_to 'Log in', login_path, class: 'btn btn-small btn-primary' %>
  </li>
</ul>
<% end %>



