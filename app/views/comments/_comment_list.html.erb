<% show_post ||= false %>


<% comments.each do |comment| %>
  <div class="well">
    <em><%= comment.body %></em> <% if show_post %>on <%= link_to comment.post.title, post_path(comment.post) %><% end %>
    <br>
    <span class='quiet'>by</span>
    <%= link_to "#{comment.creator.username}", user_path(comment.creator) %>
    <small><%= formatted_date(comment.created_at) %></small>
  </div>
<% end %>